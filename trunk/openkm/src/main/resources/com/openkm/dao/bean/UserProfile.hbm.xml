<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.openkm.dao.bean.UserProfile" table="OKM_USER_PROFILE">
    <id name="id" column="UP_ID"><generator class="native"/></id>
    <property name="name" column="UP_NAME" not-null="true"/>
    <property name="active" column="UP_ACTIVE" not-null="true"/>
    
    <property name="advancedFilters" column="UP_ADVANCED_FILTERS" not-null="true"/>
    
    <property name="userQuotaSize" column="UP_USER_QUOTA_SIZE" not-null="true"/>
    <property name="userQuotaEnabled" column="UP_USER_QUOTA_ENABLED" not-null="true"/>
    
    <property name="wizardPropertyGroups" column="UP_WIZARD_PROPERTY_GROUPS" not-null="true"/>
    <property name="wizardKeywords" column="UP_WIZARD_KEYWORDS" not-null="true"/>
    <property name="wizardCategories" column="UP_WIZARD_CATEGORIES" not-null="true"/>
    
    <property name="chatEnabled" column="UP_CHAT_ENABLED" not-null="true"/>
    <property name="chatAutoLogin" column="UP_CHAT_AUTO_LOGIN" not-null="true"/>
    
    <property name="stackCategoriesVisible" column="UP_STACK_CATEGORIES_VISIBLE" not-null="true"/>
    <property name="stackThesaurusVisible" column="UP_STACK_THESAURUS_VISIBLE" not-null="true"/>
    <property name="stackPersonalVisible" column="UP_STACK_PERSONAL_VISIBLE" not-null="true"/>
    <property name="stackMailVisible" column="UP_STACK_MAIL_VISIBLE" not-null="true"/>
    
    <property name="menuEditVisible" column="UP_MENU_EDIT_VISIBLE" not-null="true"/>
    <property name="menuToolsVisible" column="UP_MENU_TOOLS_VISIBLE" not-null="true"/>
    <property name="menuBookmarksVisible" column="UP_MENU_BOOKMARKS_VISIBLE" not-null="true"/>
    <property name="menuHelpVisible" column="UP_MENU_HELP_VISIBLE" not-null="true"/>
    
    <property name="tabDesktopVisible" column="UP_TAB_DESKTOP_VISIBLE" not-null="true"/>
    <property name="tabSearchVisible" column="UP_TAB_SEARCH_VISIBLE" not-null="true"/>
    <property name="tabDashboardVisible" column="UP_TAB_DASHBOARD_VISIBLE" not-null="true"/>
    
    <property name="dashboardUserVisible" column="UP_DASHBOARD_USER_VISIBLE" not-null="true"/>
    <property name="dashboardMailVisible" column="UP_DASHBOARD_MAIL_VISIBLE" not-null="true"/>
    <property name="dashboardNewsVisible" column="UP_DASHBOARD_NEWS_VISIBLE" not-null="true"/>
    <property name="dashboardGeneralVisible" column="UP_DASHBOARD_GENERAL_VISIBLE" not-null="true"/>
    <property name="dashboardWorkflowVisible" column="UP_DASHBOARD_WORKFLOW_VISIBLE" not-null="true"/>
    <property name="dashboardKeywordsVisible" column="UP_DASHBOARD_KEYWORDS_VISIBLE" not-null="true"/>
  </class>
</hibernate-mapping>
