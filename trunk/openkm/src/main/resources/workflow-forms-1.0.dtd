<?xml version="1.0" encoding="UTF-8"?>
<!ELEMENT forms (form+)>

<!ELEMENT form (input|textarea|select|button)*>
<!ATTLIST form
	task CDATA #REQUIRED
>

<!ELEMENT input EMPTY>
<!ATTLIST input
	label CDATA #REQUIRED
	name CDATA #REQUIRED
	value CDATA #IMPLIED
	type CDATA #IMPLIED
	width CDATA #IMPLIED
	height CDATA #IMPLIED
>

<!ELEMENT textarea EMPTY>
<!ATTLIST textarea 
	label CDATA #REQUIRED
	name CDATA #REQUIRED
	value CDATA #IMPLIED
	width CDATA #IMPLIED
	height CDATA #IMPLIED
>

<!ELEMENT select (option+)>
<!ATTLIST select
	label CDATA #REQUIRED
	name CDATA #REQUIRED
	type CDATA #IMPLIED
	width CDATA #IMPLIED
	height CDATA #IMPLIED
>

<!ELEMENT option EMPTY>
<!ATTLIST option
	name CDATA #REQUIRED
	value CDATA #REQUIRED
	selected (true|false) "false"
>

<!ELEMENT button EMPTY>
<!ATTLIST button
	label CDATA #REQUIRED
	value CDATA #IMPLIED
	type CDATA #IMPLIED
	width CDATA #IMPLIED
	height CDATA #IMPLIED
>